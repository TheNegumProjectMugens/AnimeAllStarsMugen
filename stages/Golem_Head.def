;STAGE:
;--------------------------------------------------------
[Info]
 ;Nombre del escenario:
name = "Golem_Head"
;--------------------------------------------------------
[Camera]
; Cámara posición inicial: Por lo general 0 para ambos
startx = 0
starty = 0
; Izquierda y derecha obligado de cámara
  ; Es posible que desee tocar el violín un poco con estos valores para asegurarse de que el
  ; fondo no se mueve demasiado o muy poco
 ;***
boundleft = -360;-722
boundright = 370
;De alta y baja obligada de cámara
  ; Alto es un número negativo. Hacer es más negativo si desea
  ; cámara sea capaz de moverse más alto.
  ; Baja por lo general debe ser 0.
 ; Si se omite, por defecto es -25 y 0 respectivamente
 ;***
boundhigh = -300
boundlow = 0
 ; Esto es lo que la cámara se mueve verticalmente hacia el
  ; el más alto jugador. Los valores válidos son de 0 a 1. Un valor de 0 significa
  ; la cámara no se mueve en absoluto. Un valor de 1 hace que la cámara
  ; siga el jugador mejor.
  ; Típicamente 0.2 para entornos de tamaño normal. Puede que tenga que tirar de este
  ; valor más alto para los fondos.
verticalfollow = .8
; La distancia mínima vertical, el jugador mejor tiene que ser desde el suelo,
  ; antes de que la cámara comienza a moverse hasta que lo siguiera. Por muy
  ; estadios de altura, una tensión piso de unos 20-30 junto con una
  ; vertical seguimiento de 0,8 permite a la cámara para seguir la acción.
floortension = 0
;Reproductor de distancia horizontal desde el borde es antes cámara comienza a moverse
  ; izquierda o derecha. Por lo general 50 o 60.
tension = 50
;--------------------------------------------------------
[PlayerInfo]
;--- Player 1 ---
 ;Player 1 starting coordinates.
 ;p1startx is typically -70 and p2startx is 70.
 ;p1starty and p1startz should be 0.
p1startx = -70          ;Starting x coordinates
p1starty = 0            ;Starting y coordinates
p1startz = 0            ;Starting z coordinates
p1facing = 1            ;Direction player faces: 1=right, -1=left
;--- Player 2 ---
p2startx = 70
p2starty = 0
p2startz = 0
p2facing = -1
;--- Common ---
;DEJAR ASI
leftbound  = -1000 ;Left bound (x-movement)
rightbound =  1000 ;Right bound
topbound  =  0     ;Top bound (z-movement)
botbound  =  0     ;Bottom bound
;--------------------------------------------------------
[Scaling]
;DEJAR ASI CASI SIEMPRE
topz     = 0       ;Top z-coordinate for scaling
botz     = 50      ;Bottom z-coordinate for scaling
topscale = 1       ;Scale to use at top
botscale = 1.2     ;Scale to use at bottom
;--------------------------------------------------------
[Bound]
;DEJAR ASI
screenleft = 15
screenright = 15
;--------------------------------------------------------
[StageInfo]
;NIVEL DEL SUELO
zoffset = 200
;PARA QUE GIRE SOLO
autoturn = 1
;DEJAR ASI
resetBG = 0
hires = 1
;--------------------------------------------------------
[Shadow]
intensity = 96
color = 0,0,0
yscale = .3
fade.range = 0,0
;--------------------------------------------------------
[Reflection]
;DEL 0 AL 256
intensity = 0
